<h1>Create a new Book</h1>

<% if @book.errors.any? %>
  <h2>The following errors prevented the book from being saved</h2>
  <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with scope: :book, url: books_path, local: true do |f| %>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :author %><br/>
    <%= f.text_area :author %>
  </p>

  <p>
    <%= f.label :book_count %><br/>
    <%= f.number_field :book_count %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
